extends layout

block content
  header
    h1
      span.connect Connect
      span.four 4

    p #{title}

  main
    section#call
      figure.videos-container
        video(
          id="peer-video"
          autoplay
        )
        video(
          id="self-video"
          autoplay
          muted
          playsinline
        )

      button#call-button Start Call

      section#chat-panel
        ul#message-container
        form#message-form(action="")
          input#message-input(type="text" disabled="false" autocomplete="off")
          button#send-button(type="submit" disabled="false") Send

    section#board
      article#gameboard
      button#chat-open Chat
      article#endgame
        p#winner-label Winner Winner Chicken Dinner
        button#replay-btn Play Again

  section#overlay

  script.
     window.NAMESPACE = "#{namespace}";
